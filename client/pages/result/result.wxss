page {
    background-color: #ccdfe5;
}

.row {
    /* height: 100rpx; */
    padding: 16rpx;
    display: flex;
    justify-content: center;
    border: 1px solid #ccc;
    align-items: center;
    flex-wrap: wrap;
}

.container {
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    box-sizing: border-box;
}

ec-canvas {
    width: 100%;
    height: 90%;
}

.section {
    display: block;
    height: 100%;
    width: 100%;
}

.result {
    display: flex;
    height: 1100rpx;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
}

.score {
    color: red;
    font-size: 100rpx;
}

.summary {
    display: flex;
    justify-content: flex-start;
    flex-wrap: wrap;
}

.summary text {
    font-size: 30rpx;
}

.btn {
    bottom: 0;
    height: 10vh;
    position: fixed;
    display: flex;
    justify-content: space-between;
    align-items: center;
    border: 1px solid #123432;
    width: 100%;
}

.btn button {
    height: 80%;
}
