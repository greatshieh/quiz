/**index.wxss**/

page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.userinfo {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  padding: 16rpx;
  width: 90%;
  margin-top: 5rpx;
  background-color: #155fd8;
  border-radius: 10rpx;
  color: white;
}

.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  font-size: 32rpx;
  color: #f6f6f6;
  display: block;
}

.view_hide {
  display: none;
}

.view_show {
  display: block;
}

.module {
  margin: 10rpx 25rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 900rpx;
  flex-wrap: wrap;
}

.module-style {
  width: 340rpx;
  height: 280rpx;
  /* background-color: #8ec31f; */
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
  box-shadow: 0 2rpx 13rpx 5rpx rgba(0, 0, 0, 0.02);
  border-radius: 15rpx;
}

.text {
  font-size: 60rpx;
}
