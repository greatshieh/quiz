<!--文字区域  -->
<view class="row-1">
  <!--规则说明  -->
  <view class="{{start ? 'rule' : 'view-hidden'}}">
    <text class='text-1'>挑战规则</text>
    <view class='text-2' wx:for="{{description}}" wx:key="*this">
      <text>{{item}}</text>
    </view>
  </view>
  <!--题目描述  -->
  <view class="{{start ? 'view-hidden' : 'quiz'}}">
    <text style='font-size: 50rpx'>本题剩余时间: {{second}} 秒</text>
    <text class="cnt">第{{cnt+1}}题</text>

    <view class='title'>
      <text>{{title}}</text>
    </view>

    <view class="{{style==='单选题' ? 'option' : 'view_hide'}}">
      <radio-group bindchange="radioChange">
        <label class="radio" wx:for="{{option}}" wx:key="index">
          <radio value="{{item}}" data-id="{{index}}" checked="{{item.checked}}" /> {{item}}
        </label>
      </radio-group>

    </view>
  </view>
</view>

<!--按钮区域  -->
<view class="{{start ? 'start-btn' : 'view-hidden'}} ">
  <button size='default' type="primary" bindtap='begin'>开始挑战</button>
  <button size='default' type="primary" bindtap='quit'>退出挑战</button>
</view>

<view class="{{start ? 'view-hidden' : 'challeng-btn'}} ">
  <button class="next" size='default' type="primary" bindtap="next">{{cnt+1
    < max_cnt ? "下一题" : "提交结果"}}</button>
</view>