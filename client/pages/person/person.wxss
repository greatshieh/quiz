page{
  background-color: #ccdfe5;
}

.row-1 {
  height: 90vh;
  display: flex;
}

.rule {
  margin: 0 auto;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
}

.rule-title {
  display: flex;
  align-items: center;
  justify-content: center;
  /* margin: 90rpx 0 35rpx; */
  margin-bottom: 30rpx;
}

.rule-title-text {
  font-size: 100rpx;
}

.list-title-line {
  width: 21rpx;
  height: 100rpx;
}

.rule-content {
  margin: 0 100rpx;
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  align-self: flex-start;
  font-size: 50rpx;
  white-space: pre-line;
}

.quiz {
  display: flex;
  flex-direction: column;
  margin: 0 100rpx;
}

.quiz-timer{
  font-size: 50rpx;
  color: #79151A;
}

.quiz .cnt {
  align-self: center;
  font-size: 80rpx;
  margin-top: 50rpx;
  margin-bottom: 50rpx;
}

.quiz .title {
  /* align-self: center; */
  font-size: 40rpx;
  margin-bottom: 50rpx;
}

.option {
  display: flex;
  flex-direction: column;
}

.radio {
  display: flex;
  flex-direction: row;
}

.start-btn {
  height: 10vh;
  display: flex;
}

.start-btn button {
  margin: 5rpx auto;
  height: 80%;
}

.view-hidden {
  display: none;
}
